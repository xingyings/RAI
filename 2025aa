    <style>
        body {
            margin: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            overflow: hidden;
            background-color: #000;
            font-family: 'Open Sans', sans-serif;
        }
        .background-image {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background-image: url("https://file.imgcc.cloud/images/2024/09/08/32513efc5949e81693664af7f04be9ea.jpg");
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }
        .loading-container {
            text-align: center;
            font-size: 24px;
            color: black;
            animation: fadeIn 1s forwards;
        }
        .progress-bar {
            width: 80%;
            max-width: 400px; /* 防止进度条溢出 */
            height: 20px;
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 10px;
            margin-top: 20px;
            overflow: hidden;
            position: relative;
        }
        .progress-bar-fill {
            height: 100%;
            background-color: #007BFF;
            width: 0;
            transition: width 1s ease-in-out;
        }
        .progress-label {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #fff;
            font-size: 16px;
        }
        .remaining-time {
            margin-top: 10px;
            color: #fff;
            font-size: 16px;
        }
        .content-container {
            text-align: center;
            display: none;
        }
        .content {
            font-size: 40px;
            color: #000;
            letter-spacing: 4px;
            animation: fadeInOut 3s forwards;
        }
        .credits-container {
            position: absolute;
            bottom: 10px;
            left: 0;
            width: 100%;
            text-align: center;
            color: black;
        }
        .credit {
            opacity: 0;
            animation: fadeInOut 5s forwards;
        }
        @keyframes fadeIn {
            to {
                opacity: 1;
            }
        }
        @keyframes fadeInOut {
            0% {
                opacity: 0;
            }
